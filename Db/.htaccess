# Restrict direct access to PHP files in this directory
<FilesMatch "\.(php|phtml|php3|php4|php5|php6|php7|phps|phtml|pht|phar|shtml)$">
    Require all denied
</FilesMatch>

# Allow only POST requests from specific files
<FilesMatch "^submit\.php$">
    <RequireAll>
        Require method POST
        Require ip
    </RequireAll>
</FilesMatch>
